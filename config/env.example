SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres.ndnoevxzgczvyghaktxn
SUPABASE_DB_PASSWORD=YOUR_SUPABASE_PASSWORD
SUPABASE_DB_SSLMODE=require

# Google OAuth Credentials
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_REDIRECT_URI=http://localhost/sfs/google_callback.php

# Groq API Key for AI Chatbot (FREE - Optional)
# Get your free API key at: https://console.groq.com/
# If not set, the system will use PHP-based responses (also free!)
GROQ_API_KEY=YOUR_GROQ_API_KEY

# Force PHP fallback (set to 'true' to disable Groq API and use PHP only)
USE_PHP_FALLBACK=false

# SMS API Configuration (iprogsms.com)
# Get your API token from: https://iprogsms.com/
SMS_API_TOKEN=YOUR_SMS_API_TOKEN

# SMS Template Configuration
# Header Text (REQUIRED) - Must be related to your project title or school name
# Example: "SFS Student Management" or "CJC Appointment System"
# This will be prepended to all SMS messages
SMS_HEADER_TEXT=SFS Appointment System

# Footer Text (OPTIONAL) - Will be appended to all SMS messages
# Example: "Thank you for using CJC SFS" or leave empty
SMS_FOOTER_TEXT=

# Email Configuration (for email verification)
# From address for system emails
EMAIL_FROM_ADDRESS=noreply@cjcsfs.edu.ph
EMAIL_FROM_NAME=CJC School Frontline Services

# SMTP Configuration (Optional - leave empty to use PHP mail())
# If you want to use SMTP instead of PHP mail(), set EMAIL_USE_SMTP=true
# and configure the SMTP settings below
EMAIL_USE_SMTP=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-app-password


